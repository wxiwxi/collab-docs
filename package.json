{
    "name": "wangx-doc",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "packageManager": "pnpm@9.12.3",
    "scripts": {
        "build:watch": "turbo build:watch",
        "build": "turbo build",
        "dev": "turbo dev",
        "dev:server": "pnpm --filter @wangx-doc/server start:dev",
        "dev:desktop": "pnpm --filter @wangx-doc/desktop tauri dev",
        "docker:start": "docker compose -p wangx-docs -f .devcontainer/docker-compose.yml up -d",
        "docker:stop": "docker compose -p wangx-docs -f .devcontainer/docker-compose.yml down",
        "docker:deploy": "docker compose -p wangx-docs -f .devcontainer/docker-compose.deploy.yml up -d",
        "docker:build-deploy": "pnpm build && pnpm docker:deploy",
        "docker:deploy:stop": "docker compose -p wangx-docs -f .devcontainer/docker-compose.deploy.yml down",
        "clean": "run-s clean:build clean:caches",
        "clean:build": "pnpm --filter @wangx/* clean",
        "clean:caches": " rimraf .turbo/cache **/*/.turbo",
        "clean:deps": "rimraf node_modules **/*/node_modules",
        "clean:all": "run-s clean:build clean:caches clean:deps",
        "lint": "eslint",
        "lint:staged": "lint-staged",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
        "typecheck": "turbo typecheck",
        "commit": "git-cz",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Wangx",
    "license": "MIT",
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{css,less}": [
            "prettier --cache --write"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --cache --parser=typescript --write"
        ]
    },
    "devDependencies": {
        "@types/node": "22.9.0",
        "eslint": "9.14.0",
        "@eslint/js": "9.14.0",
        "globals": "15.12.0",
        "typescript": "5.6.3",
        "typescript-eslint": "8.13.0",
        "eslint-plugin-react-refresh": "0.4.14",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "cspell": "8.15.7",
        "lint-staged": "15.2.10",
        "prettier": "3.3.3",
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "commitizen": "4.3.1",
        "fast-glob": "3.3.2",
        "husky": "9.1.6",
        "cz-git": "1.10.1",
        "tsup": "8.3.5",
        "turbo": "2.2.3",
        "rimraf": "6.0.1",
        "npm-run-all2": "7.0.1"
    }
}
